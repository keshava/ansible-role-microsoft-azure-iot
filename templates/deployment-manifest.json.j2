{
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {}
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.0",
              "createOptions": "{}"
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.0",
              "createOptions": "{}"
            }
          }
        },
        "modules": {
{% for module in azure_modules %}
          "{{ module.name }}": {
            "version": "{{ module.version|default("1.0", true) }}",
            "type": "docker",
            "status": "{{ module.desiredStatus|default("running", true) }}",
            "restartPolicy": "{{ module.restartPolicy|default("always", true) }}",
            "settings": {
              "image": "{{ module.image }}",
              "createOptions": "{{ module.createOptions|default("{}", true) }}"
            }
          }{{ "," if not loop.last else "" }}
{% endfor %}
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "routes": {
            "route": "FROM /* INTO $upstream"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    },
{% for module in azure_modules %}
    "{{ module.name }}": {
      "properties.desired": {{ module.desiredProperties|default("{}", true) }}
    }{{ "," if not loop.last else "" }}
{% endfor %}
  }
}
